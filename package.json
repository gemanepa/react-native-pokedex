{
  "name": "sword-shield-pokedex",
  "author": "Samuel Barker <dev@sam-barker.co.uk> (www.sam-barker.co.uk)",
  "contributors": [
    "Samuel Barker <dev@sam-barker.co.uk> (www.sam-barker.co.uk)"
  ],
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sam-barker/react-native-expo-pokedex.git"
  },
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "compile": "tsc",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "eject": "expo eject",
    "lint": "semistandard --fix src/**/*.{ts,tsx}",
    "test:unit": "jest -c unit.jest.config.js",
    "test:ios:clean": "rm -rf e2e/artifacts/ && ./scripts/get_exponent_ios.sh",
    "test:android:clean": "rm -rf e2e/artifacts/ && ./scripts/get_exponent_android.sh",
    "test:ios:detox": "detox test -o detox.jest.config.js --configuration ios",
    "test:android:detox": "detox test -o detox.jest.config.js --configuration android",
    "test:ios:start": "wait-on http://localhost:19002 && expo ios && sleep 15 && npm run test:ios:detox",
    "test:android:start": "wait-on http://localhost:19002 && expo android && sleep 15 && npm run test:android:detox",
    "test:ios:e2e": "concurrently -c blue,green -s 'first' -k -n EXPO,TESTS 'expo start --no-dev' 'npm run test:ios:start'; killall 'Simulator'",
    "test:android:e2e": "concurrently -c blue,green -s 'first' -k -n EXPO,TESTS 'expo start --no-dev' 'npm run test:android:start'; killall 'qemu-system--x86_64'",
    "test:all": "npm run test:unit && npm run test:ios:e2e"
  },
  "dependencies": {
    "@react-native-community/masked-view": "0.1.5",
    "@react-navigation/bottom-tabs": "^5.2.6",
    "@react-navigation/native": "^5.1.1",
    "@react-navigation/stack": "^5.2.3",
    "expo": "~36.0.0",
    "expo-constants": "~8.0.0",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-36.0.0.tar.gz",
    "react-native-chart-kit": "^5.3.0",
    "react-native-gesture-handler": "~1.5.0",
    "react-native-reanimated": "~1.4.0",
    "react-native-safe-area-context": "0.6.0",
    "react-native-screens": "2.0.0-alpha.12",
    "react-native-svg": "9.13.3",
    "react-native-web": "~0.11.7",
    "semistandard": "^14.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/detox": "^14.5.2",
    "@types/jasmine": "^3.5.10",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-native": "^0.60.31",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-preset-expo": "~8.0.0",
    "concurrently": "^5.1.0",
    "detox": "^16.2.0",
    "detox-expo-helpers": "^0.6.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "expo-detox-hook": "^1.0.10",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "jest-expo": "^37.0.0",
    "react-native-testing-library": "^1.13.0",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^25.3.1",
    "typescript": "~3.6.3",
    "wait-on": "^4.0.2"
  },
  "private": true,
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "semistandard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "globals": [
      "describe",
      "it",
      "expect",
      "jest"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "artifacts": {
      "rootDir": "e2e/artifacts",
      "plugins": {
        "instrumentation": {
          "enabled": false
        },
        "log": {
          "enabled": true
        },
        "screenshot": {
          "enabled": true,
          "shouldTakeAutomaticSnapshots": true,
          "keepOnlyFailedTestsArtifacts": false,
          "takeWhen": {
            "testStart": false,
            "testDone": true
          }
        }
      }
    },
    "configurations": {
      "ios": {
        "binaryPath": ".expo/Exponent.app/",
        "type": "ios.simulator",
        "name": "iPhone 11 Pro Max",
        "artifacts": {
          "rootDir": "e2e/artifacts/ios",
          "plugins": {
            "video": "all"
          }
        }
      },
      "android": {
        "testBinaryPath": ".expo/Exponent.apk",
        "binaryPath": ".expo/Exponent.apk",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_3_XL"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run compile && npm run lint && npm run test:unit",
      "pre-push": "npm run test:all"
    }
  }
}
